<div class="l-constrained l-constrain--400">
  <div class="main login-register">
    <h1 class="h1">Sign In</h1>
    <div id="login-register">

      <form {{action 'login' on='submit'}} id="login" class="js-login_form" autocapitalize='none' autocorrect='none'>
        {{#if errors}}
        <ul class="errorlist">
        {{#each errors as |message|}}
          <li>
            {{message}}
          </li>
        {{/each}}
        </ul>
        {{/if}}

        <label for="id_username" style="display: none;">email</label>
        {{input value=username maxlength=254 placeholder='email' name='username' class="input--block nudge"}}

        <label for="id_password" style="display: none;">Password</label>
        {{input value=password type='password' placeholder='Password' name='password' class="input--block nudge"}}

        <button class='submit' type="submit">Sign In</button>
        
        <div>{{link-to "Forgot your password?" "forgot-password" }}</div>
        <div>New user? <a href="/in_iframe/accounts/register/?next=https://www.wnyc.org/">Sign up</a>.</div>
        <div>Trying to <a href="https://www.wnyc.org/support/faq/#10" target="_blank" class="external-link">access your membership account</a>?</div>
        </form>

              
        <p class="disclaimer">Online accounts are not directly linked with membership accounts and
        pledges at this time. If you need to update your membership
        information you <a href="/contact/">contact us</a> or call 646.829.4000.
        </p>

    </div>
  </div>
</div>
